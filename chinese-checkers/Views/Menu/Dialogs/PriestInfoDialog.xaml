<ContentDialog
    x:Class="chinese_checkers.Views.Menu.Dialogs.PriestInfoDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:chinese_checkers.Views.Menu.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Priest"
    PrimaryButtonText="Close"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <Image x:Name="healImage" Source="ms-appx:///Assets/Images/Abilities/heal-ability.png" Width="50" Height="50" Margin="0,0,20,0"></Image>
            <StackPanel>
                <TextBlock>Character Ability: Heal</TextBlock>
                <TextBlock TextWrapping="WrapWholeWords" Width="400">Choose a friendly piece to restore health.</TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</ContentDialog>
